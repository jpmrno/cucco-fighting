GCC_FLAGS = -std=c99 -pedantic -Wall -Wextra -Werror -Wno-error=pedantic -Wfatal-errors -Wno-unused-parameter -Wno-unused-but-set-parameter -Wno-error=unused-function

ifeq ($(shell uname), Darwin)
	GCC = gcc-5

	AR = libtool -static
	AR_FLAGS = -o
else
	GCC = gcc
	GCC_FLAGS += -D_BSD_SOURCE

	AR = ar
	AR_FLAGS = -rvs
endif

LIBS_PATH = libs
LIBS_HEADERS = $(LIBS_PATH)/include
